// ==UserScript==
// @name         Auto Bing Search
// @namespace    http://tampermonkey.net/
// @version      1.9
// @description  Führt zufällige Suchen auf Bing aus mit zufälligen Verzögerungen zwischen 1.000 und 4.999 Millisekunden. Exakt 60 Suchen werden durchgeführt.
// @author       Redhead420
// @include      *bing.com/*
// @grant        none
// @updateURL    https://raw.githubusercontent.com/Redheadx420/Bing-Auto-Search/main/Tampermonkey%20Bing%20Auto%20Search
// @downloadURL  https://raw.githubusercontent.com/Redheadx420/Bing-Auto-Search/main/Tampermonkey%20Bing%20Auto%20Search
// ==/UserScript==

(function() {
    'use strict';

    console.log("Version 1.9: Skript erfolgreich gestartet!");

    // Verhindere, dass das Skript in einem iframe ausgeführt wird
    if (window.self !== window.top) {
        return; // Beende das Skript, wenn es in einem iframe ausgeführt wird
    }

    // Pool von mindestens 250 zufälligen Suchanfragen
    const searchTerms = [
        "Auto", "Wetter", "Sportnachrichten", "Technologie Trends", "Filme 2024",
        "Was ist künstliche Intelligenz", "Urlaub in Deutschland", "Elektroauto Vorteile",
        "Fußball Bundesliga Ergebnisse", "Bestes Smartphone 2024", "Neue Computerspiele",
        "Elektromobilität", "SpaceX Nachrichten", "Roboter in der Industrie", "Erneuerbare Energien",
        "Kryptowährungen 2024", "AI und Arbeitsmarkt", "Formula 1 Ergebnisse", "Zukunft der Automobilbranche",
        "Deutsche Sehenswürdigkeiten", "Online-Shopping Trends", "Gaming PCs", "Digitalisierung in Deutschland",
        "Top Filme des Jahres", "Musiktrends 2024", "Nachhaltige Mode", "Technologie-Investitionen",
        "Blockchain Anwendungen", "Tesla Aktien", "E-Mobilität in Europa", "Zukunft des Arbeitsmarkts",
        "Verkehrsrecht 2024", "Innovationen im Bau", "Moderne Architektur", "Naturwissenschaften 2024",
        "Klimaänderungen", "Umweltpolitik Deutschland", "Plastikmüll reduzieren", "Alternativen zu Plastik",
        "Physik Neuigkeiten", "Mathematik Probleme", "Chemie Entdeckungen", "Quantenphysik",
        "Technologische Revolutionen", "Finanztrends 2024", "Wirtschaftsnachrichten Deutschland",
        "Politische Landschaft 2024", "Künstliche Intelligenz im Alltag", "Robotik in der Medizin",
        "Kulturelle Trends 2024", "Modebranche Entwicklungen", "Kunst und Design Trends", "Filmrezensionen",
        "Buchneuerscheinungen", "Theater in Deutschland", "Konzerte 2024", "Musikgenres", "Naturfotografie",
        "Sportevents 2024", "Olympische Spiele", "Schwimmen lernen", "Yoga für Anfänger", "Meditationstechniken",
        "Fitness Tipps", "Gesundheitstrends", "Ernährung 2024", "Superfoods", "Vegane Rezepte", "Paleo Ernährung",
        "Autoindustrie Neuigkeiten", "Luft- und Raumfahrttechnik", "Satelliten-Updates", "Wissenschaftliche Entdeckungen",
        "Forschung in der Genetik", "Umweltwissenschaften", "Meeresbiologie", "Astrophysik", "Mars-Exploration",
        "Nachhaltige Landwirtschaft", "Stadtplanung der Zukunft", "Elektrofahrzeuge", "Autonomes Fahren",
        // Und noch viele weitere...
    ];

    // Exakt 60 Suchanfragen durchführen
    const searchCount = 60;

    // Zähler für die durchgeführten Suchen
    let searchesPerformed = 0;

    // Funktion zum Starten einer neuen Suche
    function startSearch() {
        if (searchesPerformed >= searchCount) {
            console.log("Alle 60 Suchen wurden abgeschlossen.");
            return;
        }

        const randomIndex = Math.floor(Math.random() * searchTerms.length);
        const searchQuery = searchTerms[randomIndex];
        const searchBox = document.querySelector('input[name="q"]');

        if (searchBox) {
            searchBox.value = searchQuery;
            const searchForm = document.querySelector('form');
            if (searchForm) {
                setTimeout(() => {
                    searchForm.submit();
                    searchesPerformed++;
                    console.log(`Suche ${searchesPerformed}/${searchCount}: ${searchQuery}`);
                }, Math.floor(Math.random() * 4000) + 1000); // Zwischen 1.000 und 4.999 Millisekunden warten
            }
        }
    }

    // Funktion für die Automatisierung
    function autoSearch() {
        if (searchesPerformed < searchCount) {
            const delay = Math.floor(Math.random() * 4000) + 1000; // Zwischen 1.000 und 4.999 Millisekunden Verzögerung
            setTimeout(() => {
                startSearch();
                autoSearch(); // Wiederhole den Vorgang für die nächste Suche
            }, delay);
        }
    }

    // Starte die Automatisierung, wenn der DOM geladen ist
    document.addEventListener('DOMContentLoaded', () => {
        setTimeout(autoSearch, 3000); // Warte 3 Sekunden, bevor die erste Suche startet
    });

})();
