    ];

    const searchCount = 60; // Anzahl der zu durchführenden Suchen
    let searchesPerformed = 0; // Zähler für durchgeführte Suchen

    // Funktion zum Starten einer neuen Suche
    function startSearch() {
        if (searchesPerformed >= searchCount) {
            console.log("Alle 60 Suchen abgeschlossen.");
            return;
        }

        const randomIndex = Math.floor(Math.random() * searchTerms.length);
        const searchQuery = searchTerms[randomIndex];
        const searchBox = document.querySelector('input[name="q"]');

        if (searchBox) {
            searchBox.value = searchQuery;
            const searchForm = document.querySelector('form');
            if (searchForm) {
                searchForm.submit();
                searchesPerformed++;
                console.log(`Suche ${searchesPerformed}/${searchCount}: ${searchQuery}`);
            }
        }
    }

    // Hauptsuchschleife mit setInterval
    const searchInterval = setInterval(() => {
        if (searchesPerformed < searchCount) {
            startSearch();
        } else {
            clearInterval(searchInterval); // Beende den Timer, wenn die 60 Suchen abgeschlossen sind
        }
    }, Math.floor(Math.random() * 4000) + 1000); // Zufällige Verzögerung zwischen 1.000 und 4.999 Millisekunden

    // Zähler für die Konsole anzeigen
    console.log(`Suche gestartet. Ziel: 60 Suchen. Aktuelle Suchen: ${searchesPerformed}/60`);

    window.addEventListener('blur', () => {
        console.log("Tab gewechselt, aber Skript läuft weiter.");
    });

})();
