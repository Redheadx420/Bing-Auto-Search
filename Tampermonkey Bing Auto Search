        "Moderne Architektur", "Reiseplanung", "Digitale Trends", "Erneuerbare Ressourcen", "Technologie-Kunst",
        "Wirtschaftsplanung", "Kunststudien", "Wissenschaftliche Erkenntnisse", "Medienberichterstattung", "Technologieanwendungen",
        "Sozialwissenschaftliche Forschung", "Biotechnologie", "Gesundheitsberatung", "Digitale Medien", "Kulturelle Angebote",
        "Reiseberichte", "Innovationsstrategien", "Forschungsberichte", "Unternehmensführung", "Umweltforschung", "Bildungsreformen",
        "Stadtentwicklung", "Landnutzung", "Gesundheitsinnovation", "Energiekonzepte", "Medieninformatik", "Bildungsforschung",
        "Innovationsentwicklung", "Wissenschaftliche Studien", "Digitale Anwendungen", "Kulturprojekte", "Reiseziele",
        "Veranstaltungskalender", "Bildungstechnologien", "Gesellschaftliche Analysen", "Medieninhalte", "Digitales Design",
        "Technologische Entdeckungen", "Marktanalysen", "Stadtplanung", "Verbrauchertrends", "Bildungspolitik", "Forschungsinitiativen"
    ];

    // Anzahl der durchzuführenden Suchen
    const searchCount = 60;

    // Sicherstellen, dass der Pool genügend Suchbegriffe enthält
    if (searchTerms.length < searchCount) {
        throw new Error("Der Pool an Suchbegriffen ist kleiner als die Anzahl der durchzuführenden Suchen.");
    }

    // Shuffle-Funktion zum Mischen des Arrays
    function shuffleArray(array) {
        for (let i = array.length - 1; i > 0; i--) {
            const j = Math.floor(Math.random() * (i + 1));
            [array[i], array[j]] = [array[j], array[i]];
        }
    }

    // Mische die Suchbegriffe und wähle die ersten `searchCount` aus
    shuffleArray(searchTerms);
    const selectedSearchTerms = searchTerms.slice(0, searchCount);

    // Zähler für die durchgeführten Suchen
    let searchesPerformed = 0;

    // Funktion zum Starten einer neuen Suche
    function startSearch() {
        if (searchesPerformed >= searchCount) {
            console.log("Alle Suchen wurden abgeschlossen.");
            return;
        }

        const searchQuery = selectedSearchTerms[searchesPerformed];
        const searchBox = document.querySelector('input[name="q"]');

        if (searchBox) {
            searchBox.value = searchQuery;
            const searchForm = document.querySelector('form');
            if (searchForm) {
                setTimeout(() => {
                    searchForm.submit();
                    searchesPerformed++;
                    console.log(`Suche ${searchesPerformed}/${searchCount}: ${searchQuery}`);
                }, Math.random() * 3999 + 1000); // Zwischen 1.000 und 4.999 Millisekunden warten
            }
        }
    }

    // Funktion für die Automatisierung
