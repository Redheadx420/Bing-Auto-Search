// ==UserScript==
// @name         Auto Bing Search
// @namespace    http://tampermonkey.net/
// @version      1.9.8
// @description  FÃ¼hrt zufÃ¤llige Suchen auf Bing aus mit zufÃ¤lligen VerzÃ¶gerungen zwischen 3.000 und 8.000 Millisekunden. Exakt 60 Suchen werden durchgefÃ¼hrt.
// @author       Redhead420
// @match        *bing.com/*
// @grant        none
// @updateURL    https://raw.githubusercontent.com/Redheadx420/Bing-Auto-Search/main/Tampermonkey%20Bing%20Auto%20Search
// @downloadURL  https://raw.githubusercontent.com/Redheadx420/Bing-Auto-Search/main/Tampermonkey%20Bing%20Auto%20Search
// ==/UserScript==

(function() {
    'use strict';

    // Liste von Suchbegriffen
    const searchTerms = [
        "Aktuelle Nachrichten", "Wettervorhersage", "Technologie Trends", "Filme 2024", "KÃ¼nstliche Intelligenz",
        // KÃ¼rzere Liste fÃ¼r Tests
    ];

    function getRandomTerm() {
        return searchTerms[Math.floor(Math.random() * searchTerms.length)];
    }

    function performSearch() {
        const searchBox = document.querySelector('input[name="q"]');
        if (searchBox) {
            console.log('Suchbegriff wird gesetzt:', getRandomTerm());
            searchBox.value = getRandomTerm();
            searchBox.form.submit();
        } else {
            console.log('Suchfeld nicht gefunden');
        }
    }

    // Lustiger Spruch in der Konsole
    console.log('ðŸš€ Das Auto Bing Search Skript wurde gestartet! Viel SpaÃŸ beim Suchen! ðŸ˜„');

    setInterval(performSearch, Math.random() * (8000 - 3000) + 3000);
})();
